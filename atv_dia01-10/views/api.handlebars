<style>
    form{
        background-color: #cacaca;
        border-radius: 25px;
        
    }
    
    main{
        margin-top: 20px;
        flex-direction: column;
    }
.textos{
    padding-left: 20px;
}
.textos p{
    margin: 20px;
}
</style>

<main class="d-flex align-items-center justify-content-center  ">

    <div class="container">
       
           
               <form action="/cadastrar" method="post"> 
                <div class="d-flex flex-column mb-3  align-items-center justify-content-center mx-5 py-4"  >
                    <input type="text" name="marca"  class="form-control my-2" placeholder="Digite a marca do veiculo"  id="validationCustom01" required>
                     <input type="text" name="modelo" class="form-control my-2"placeholder="Digite o modelo do veiculo" id="validationCustom01" required>
                <input type="number" name="ano" class="form-control my-2" placeholder="Digite o ano do veiculo no fomrato XXXX" id="validationCustom01" required>
                    <input type="text" name="proprietario" class="form-control my-2"placeholder="Digite o nome do proprietario" id="validationCustom01" required>
                    <input type="text" name="cor" class="form-control my-2" placeholder="Digite a cor do veiculo" id="validationCustom01" required>
                    <input type="submit" class="btn btn-primary" value="Cadastrar" id="validationCustom01" required>
                    <a href="/viewall" class="btn btn-primary my-2">Ver todos os veiculos</a>
                </div>
               </form>
         </div>
         <div class="container">
            <div class="row" >
               {{#each carros}}
                 <div class="col-12 col-sm-6 col-md-4 col-lg-3 my-4" style="border-radius: 25px;">
                    <div class="card">
                        <div class="textos">
                            <p>id: {{id}} </p>
                            <p>Marca: {{marca}} </p>
                            <p> Modelo: {{modelo}} </p>
                            <p>Ano: {{ano}} </p>
                            <p>propriet√°rio: {{proprietario}} </p>
                            <p>Cor: {{cor}} </p>
                        </div>
                        <a href="/formEditar/{{id}}" class="btn btn-warning my-1">alterar</a>
                        <a href="/remover/{{id}}" class="btn btn-danger my-1">remover</a>
                    </div>
                </div>
               {{/each}}
            </div>
         </div>
</main>